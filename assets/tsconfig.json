{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react"
  },
  "awesomeTypescriptLoaderOptions": {
    "forceIsolatedModules": true,
    "errorsAsWarnings": true
  },
  "files": [
    "ts/index.tsx"
  ],
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}