{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "js",
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "includes": [
    "js/**/*"
  ],
  "exclude": ["node_modules"]
}